<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemePage"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/home"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/avatar" />

    </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <Button
        android:id="@+id/Geographie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Géographie"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/Histoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histoire"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/Science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:layout_gravity="center"/>

        <Button
            android:id="@+id/Animaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animaux"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/Francais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Français"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/Mythologie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mythologie"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/Mathematique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematique"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>